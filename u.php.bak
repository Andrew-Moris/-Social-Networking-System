 */

// Start the session before any output
session_start();

// Include configuration and utility functions
require_once 'config.php'; // Contains DB config, DEFAULT_AVATAR, POSTS_PER_PAGE
require_once 'functions.php'; // Contains findUserByUsername, getUserPosts, getFollowersCount, etc.

// Check for active user session
if (!isset($_SESSION['user_id']) || !isset($_SESSION['username'])) {
    // If not logged in, redirect to login page
    header('Location: login.php');
    exit;
}

// استخدام اسم المستخدم من الجلسة لعرض الملف الشخصي للمستخدم الحالي
$session_username = $_SESSION['username'];
$session_user_id = $_SESSION['user_id'];

// تهيئة المتغيرات
$user = null;
$posts = [];
$followers_count = 0;
$following_count = 0;
$total_posts_count = 0; // To store total number of posts for the user
$is_following = false; // This will always be false if viewing own profile based on logic
$is_current_user_profile = true; // Since we are always showing the logged-in user's profile

try {
    // الاتصال بقاعدة البيانات
    $pdo = new PDO($dsn, $db_user, $db_pass, $pdo_options);
    $pdo->setAttribute(PDO::ATTR_ERRMODE, PDO::ERRMODE_EXCEPTION);
    
    // البحث عن المستخدم المسجل دخوله
    $user = findUserByUsername($pdo, $session_username);
    
    if (!$user) {
        // هذا السيناريو يجب ألا يحدث إذا كانت الجلسة صحيحة والمستخدم موجود في قاعدة البيانات
        // لكن كإجراء احترازي
        log_error("User from session '{$session_username}' not found in database.");
        // يمكنك إعادة توجيهه لصفحة الخروج أو عرض رسالة خطأ عامة
        session_destroy();
        header('Location: login.php'); // Or your actual login page
        exit;
    }
    
    $profile_user_id = $user['id']; // ID of the profile being viewed (which is the logged-in user)
    
    // جلب منشورات المستخدم (الصفحة الأولى بشكل افتراضي)
    $page = isset($_GET['page']) ? (int)$_GET['page'] : 1;
    $posts_data = getUserPostsWithCount($pdo, $profile_user_id, $page, POSTS_PER_PAGE); // Assumes this function exists and returns posts and total count
    $posts = $posts_data['posts'];
    $total_posts_count = $posts_data['total_count'];
    
    // حساب عدد المتابعين والمتابَعين
    $followers_count = getFollowersCount($pdo, $profile_user_id);
    $following_count = getFollowingCount($pdo, $profile_user_id);
    
    // بما أن هذه صفحة المستخدم الحالية، is_following ليست ذات معنى هنا
    // وزر المتابعة/إلغاء المتابعة لن يظهر

} catch (PDOException $e) {
    log_error("Database Error on u.php: " . $e->getMessage());
    
    // For debugging mode only, display error details (remove in production)
    $error_details = "<strong>Database connection error:</strong> " . $e->getMessage();
    $error_details .= "<br><strong>DSN:</strong> " . $dsn;
    $error_details .= "<br><strong>User:</strong> " . $db_user;
    
    echo "<div style='background-color: #f8d7da; color: #721c24; padding: 15px; margin: 10px; border-radius: 5px;'>";
    echo "<h3>Debug Error</h3>";
    echo $error_details;
    echo "<p><strong>Note:</strong> This message should only be displayed in development environment.</p>";
